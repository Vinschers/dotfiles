#!/bin/sh

. sb-style
STYLE=2

fg="$(get_fg $STYLE)"
bg_icon="$(get_bg_icon $STYLE)"
bg_text="$(get_bg_text $STYLE)"

SIZE=25
BAR_MARGIN=1
BAR_PAD=2
MARGIN=$(( BAR_PAD + BAR_MARGIN ))
HEAD_SIZE=2
WIDTH=4
PADDING=3

HEIGHT=$(( SIZE - 2 * MARGIN - 4 ))

draw_battery () {
    printf " %s%% " "$1"
}

icon=""

if [ "$(ls /sys/class/power_supply)" = "" ];
then
    printf "%s%s" "$bg_icon" "$fg"
    printf " %s " "$icon"
    printf "%s" "$bg_text"

    draw_battery 100
    printf "%s" "$(get_color_reset)"
	exit 0
fi

battery_info=""

for battery in /sys/class/power_supply/BAT?*; do
	capacity="$(cat "$battery/capacity" 2>&1)"
	battery_status="$(cat "$battery/status" 2>&1)"

    if [ "$battery_status" = "Charging" ]
    then
        STYLE=3
        icon=""
    else
        STYLE=2
    fi

    fg="$(get_fg $STYLE)"
    bg_icon="$(get_bg_icon $STYLE)"
    bg_text="$(get_bg_text $STYLE)"

    battery_info="$battery_info$(draw_battery "$capacity" "$2")"

    battery_info="$battery_info "
done

printf "%s%s" "$bg_icon" "$fg"
printf " %s " "$icon"
printf "%s" "$bg_text"
printf "%s" "${battery_info%?}"
printf "%s" "$(get_color_reset)"

case $BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
