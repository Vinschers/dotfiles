#!/bin/sh

n=3
logfile="${XDG_CACHE_HOME:-$HOME/.cache}/hardware"
read opt < "$logfile" || opt=0

update_opt () {
	param=$1
	opt=$(( (opt + param) % n ))
	opt=${opt#-}
	echo "$opt" > "$logfile"
}

case $BUTTON in
	1) update_opt 1 ;;
esac

printf "^c%s^" "$1"

case $opt in
    0) sb-cpu ;;
    1) sb-memory ;;
    2) sb-disk ;;
esac
