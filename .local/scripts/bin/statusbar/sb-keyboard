#!/bin/sh

. sb-style
STYLE=4

fg="$(get_fg $STYLE)"
bg_icon="$(get_bg_icon $STYLE)"
bg_text="$(get_bg_text $STYLE)"

icon=""
text="$(xkb-switch)"

printf "%s%s" "$bg_icon" "$fg"
printf " %s " "$icon"
printf "%s" "$bg_text"
printf " %s " "$text"
printf "%s" "$(get_color_reset)"

notify-send -u low " Keyboard" "Changed keyboard layout to $text"
