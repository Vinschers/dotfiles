#!/bin/sh

. sb-style
STYLE=8

fg="$(get_fg $STYLE)"
bg_icon="$(get_bg_icon $STYLE)"
bg_text="$(get_bg_text $STYLE)"

volume=$(pamixer --get-volume)
muted=$(pamixer --get-mute)

icon="墳"

if [ "$muted" = "true" ]
then
    icon="婢"
    volume="0"
else
    [ "$volume" -le 25 ] && icon="奔"
    [ "$volume" -ge 80 ] && icon=""
fi

printf "%s%s" "$bg_icon" "$fg"
printf " %s " "$icon"
printf "%s" "$bg_text"
printf " %s%% " "$volume"
printf "%s" "$(get_color_reset)"

case $BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
