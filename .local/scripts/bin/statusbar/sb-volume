#!/bin/sh

. sb-style
STYLE=1

fg="$(get_fg $STYLE)"
bg_icon="$(get_bg_icon $STYLE)"
bg_text="$(get_bg_text $STYLE)"

volume=$(pamixer --get-volume)

icon="墳"

[ "$volume" -le 25 ] && icon="奔"
[ "$volume" -ge 80 ] && icon=""
[ "$volume" = "0" ] && icon="婢"

printf "%s%s" "$bg_icon" "$fg"
printf " %s " "$icon"
printf "%s" "$bg_text"
printf " %s%% " "$volume"
printf "%s" "$(get_color_reset)"

case $BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
