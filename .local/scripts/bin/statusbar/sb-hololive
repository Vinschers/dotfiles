#!/bin/sh

. sb-style
STYLE=9

check_lives () {
	while read -r id symbol
    do
        curl -s "https://www.youtube.com/channel/$id" | grep -qE '{"text":" watching"}|{"text":" assistindo"}' && printf "%s" "$symbol"
	done
}

input () {
	echo "UCYz_5n-uDuChHtLo7My1HnQ ğŸ§Ÿ"

	echo "UCoSrY_IQQVpmIRZ9Xf-y93g ğŸ”±"
    echo "UCyl1z3jo3XHR1riLFKG5UAg ğŸ”"
    echo "UCL_qhgtOy0dy1Agp8vkySQg ğŸ’€"
    echo "UCHsx4Hqa-1ORjQTh9TYDhww ğŸ”"
    echo "UCMwGHR0BTZuLsmjY_NT5Pwg ğŸ™"

    echo "UC8rcEBzJSleTkf_-agPM20g ğŸ’"

    echo "UCsUj0dszADCGbF3gNrQEuSQ ğŸª"
    echo "UCO_aKKYxn4tvrqPjcTzZ6EQ ğŸŒ¿"
    echo "UC3n5uGu18FoCy23ggWWp8tA ğŸª¶ "
    echo "UCmbs8T6MWqUHP1tIQvSgKrg â³"
    echo "UCgmPnx-EEeOrZSg5Tiw7ZRQ ğŸ²"

    echo "UCKYyiJwNg2nV7hM86U5_wvw Î±"
}

fg="$(get_fg $STYLE)"
bg_icon="$(get_bg_icon $STYLE)"
bg_text="$(get_bg_text $STYLE)"

icon="ï‹"
text="$(input | check_lives)"

printf "%s%s" "$bg_icon" "$fg"
printf " %s " "$icon"
printf "%s" "$bg_text"
