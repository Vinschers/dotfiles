#!/bin/sh

compileFile() {
    ! [ -f "$1" ] && return 1

    dir=$(dirname "$1")
    file=$(basename -- "$1")
    ext="${file##*.}"
    file="${file%.*}"

    cmd=""
    bin_file="$dir/$file"

    case $ext in
        c)
            gcc -g -std=c99 -Wall "$1" -o "$dir/$file" -lm
            ;;
        cpp)
            g++ -g -Wall -o "$dir/$file" -lm "$1"
            ;;
        java)
            javac "$1" && bin_file="$dir/$file.class" ; cmd="java"
            ;;
        py)
            cmd="python $1"
            bin_file=""
            ;;
        tex)
            pdflatex "$1" > /dev/null && pdflatex "$1" > /dev/null && find "$dir" -maxdepth 1 -type f -name "$file.*" -not \( -name "$file.tex" -or -name "$file.pdf" \) -delete && bin_file="$dir/$file.pdf" ; cmd="xdg-open"
            ;;
        exs)
            cmd="elixir"
            ;;
        s)
            gcc -g -Wall "$1" -o "$dir/$file" -lm
            ;;
        *)
            return 1
            ;;
    esac

    printf "%sยง%s\n" "$bin_file" "$cmd"
}

compileMake() {
    make -Bnd | make2graph -f L | sed '/all\|\<ROOT\>/d' | head -1
}

path="$1"

if [ -d "$path" ] || [ "${path#*Makefile}" != "$path" ]
then
    compileMake "$path"
else
    compileFile "$path"
fi
