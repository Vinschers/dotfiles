#!/bin/sh

background="$(xrdb -get background)"
foreground="$(xrdb -get foreground)"
color1="$(xrdb -get color1)"
color2="$(xrdb -get color2)"


echo "set completion-bg $background"
echo "set completion-fg $foreground"
echo "set completion-group-bg $background"
echo "set completion-group-fg $color2"
echo "set completion-highlight-bg $foreground"
echo "set completion-highlight-fg $background"
echo "set recolor-lightcolor $background"
echo "set recolor-darkcolor $foreground"
echo "set default-bg $background"
echo "set inputbar-bg $background"
echo "set inputbar-fg $foreground"
echo "set notification-bg $background"
echo "set notification-fg $foreground"
echo "set notification-error-bg $color1"
echo "set notification-error-fg $foreground"
echo "set notification-warning-bg $color1"
echo "set notification-warning-fg $foreground"
echo "set statusbar-bg $background"
echo "set statusbar-fg $foreground"
echo "set index-bg $background"
echo "set index-fg $foreground"
echo "set index-active-bg $foreground"
echo "set index-active-fg $background"
echo "set render-loading-bg $background"
echo "set render-loading-fg $foreground"
