#!/bin/sh

get_fg() {
    if echo "$1" | grep -Eq '^[0-9]+$'; then
	    color="$(xrdb -get "color$1")"
    else
	    color="$(xrdb -get "$1")"
    fi
    echo "^c$color^"
}

get_bg() {
    if echo "$1" | grep -Eq '^[0-9]+$'; then
	    color="$(xrdb -get "color$1")"
    else
	    color="$(xrdb -get "$1")"
    fi
    echo "^b$color^"
}

reset_color() {
	echo "^d^"
}

display_info() {
	style="$1"
	icon="$2"
	text="$3"

    open=""
    close=""

    [ -n "$icon" ] && echo "$(get_fg "$style")$open$(get_bg "$style") $(get_fg "background")$icon $text $(reset_color)$(get_fg "$style")$close$(reset_color)"
    [ -z "$icon" ] && echo "$(get_fg "$style")$open$(get_bg "$style") $(get_fg "background")$text $(reset_color)$(get_fg "$style")$close$(reset_color)"
}
