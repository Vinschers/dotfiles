#!/bin/sh

sys_type="$(cat /sys/class/dmi/id/chassis_type)"

case "$sys_type" in
    3)
        picom --backend glx -f &
        ;;
    10)
        picom --backend xrender -f &
        nm-applet &
        ;;
    *)
        picom --backend xrender -f &
        ;;
esac

nitrogen --restore &
dunst &

[ -n "$(xsetwacom list devices)" ] && "$SCRIPTS_DIR/devices/wacom.sh"

[ -f "$HOME/.config/lockscreen.*" ] && betterlockscreen -u "$HOME/.config/lockscreen.*" &
xautolock -time 10 -locker lock -corners +00- &
#python "$SCRIPTS_DIR/external/inkscape-shortcut-manager/main.py" &
