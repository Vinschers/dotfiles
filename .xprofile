#!/bin/sh

sys_type="$(cat /sys/class/dmi/id/chassis_type)"

if [ "$sys_type" -eq 3 ] # Desktop
then
    echo "Desktop"
elif [ "$sys_type" -eq 10 ] # Notebook
then
    echo "Notebook"

    nm-applet &
else
    echo "Unknown system"
fi

picom -f &
nitrogen --restore &
dunst &

[ -n "$(xsetwacom list devices)" ] && "$SCRIPTS_DIR/devices/wacom.sh"

