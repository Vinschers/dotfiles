{
    "custom/pacman": {
        "format": "{icon}{}",
        "return-type": "json",
        "format-icons": {
            "pending-updates": " ",
            "updated": ""
        },
        "exec-if": "which waybar-updates",
        "exec": "waybar-updates"
    },
    "tray": {
        "icon-size": 24,
        "tooltip": true,
        "spacing": 12
    },
    "clock": {
        "interval": 1,
        "format": "<b>  {:%H:%M:%S}</b>",
        "tooltip-format": "{:%d/%m/%Y}"
    },
    "group/batteries": {
        "orientation": "horizontal",
        "modules": ["battery#bat0", "battery#bat1"]
    },
    "battery#bat0": {
        "bat": "BAT0",
        "interval": 60,
        "states": {
            "warning": 40,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-icons": ["", "", "", "", ""],
        "max-length": 25
    },
    "battery#bat1": {
        "bat": "BAT1",
        "interval": 60,
        "states": {
            "warning": 40,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-icons": ["", "", "", "", ""],
        "max-length": 25
    }
}
