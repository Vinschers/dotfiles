{
    "group/hardware": {
        "orientation": "horizontal",
        "modules": ["custom/cpu", "memory", "custom/gpu", "disk"]
    },
    "custom/cpu": {
        "interval": 1,
        "format": "󰍛 {}%",
        "exec": "printf \"%d\" $(( 100 - $(vmstat 1 2|tail -1|awk '{print $15}') ))"
    },
    "memory": {
        "interval": 1,
        "format": " {}%",
        "max-length": 10
    },
    "disk": {
        "interval": 30,
        "format": " {percentage_used}%",
        "path": "/"
    },
    "custom/gpu": {
        "exec": "which nvidia-smi >/dev/null 2>/dev/null && nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
        "interval": 1,
        "format": "󱄄 {}%"
    }
}
