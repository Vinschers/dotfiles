{
    "group/themes": {
        "orientation": "horizontal",
        "modules": ["image#change-theme", "image#change-wallpaper"]
    },
    "image#change-wallpaper": {
        "exec": "echo \"$HOME/.config/waybar/images/wallpaper.png\"",
        "on-click": "$HOME/.config/theme/update_wallpaper.sh n",
        "on-click-right": "$HOME/.config/theme/update_wallpaper.sh p"
    },
    "image#change-theme": {
        "exec": "echo \"$HOME/.config/waybar/images/theme.png\"",
        "on-click": "$HOME/.config/theme/set_theme.sh n",
        "on-click-right": "$HOME/.config/theme/set_theme.sh p"
    }
}
