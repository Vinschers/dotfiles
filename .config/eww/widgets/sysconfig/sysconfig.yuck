(defwidget sysconfig []
  (custom_widget

    (button
      :class "sysconfig"
      :onclick "scripts/toggle_window.sh configuration"
    
      (box
        :class "config-icons"
        :space-evenly false
        :spacing 16

        (label
          :visible {weather != ""}
          :class "weather-icon"
          :text "${weather.icon}"
        )
      )
    )
  )
)
