(deflisten window0 "hyprland-activewindow \"$(hyprctl monitors -j | jq -r '.[0].name')\"")
(deflisten window1 "hyprland-activewindow \"$(hyprctl monitors -j | jq -r '.[1].name')\"")

(defwidget window [monitor]
  (label
    :class "active-window"
    :limit-width 32
    :text "${monitor == 0 ? window0 : window1}"
  )
)
