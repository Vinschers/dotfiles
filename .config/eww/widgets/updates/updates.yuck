(defpoll updates :interval "1m" "scripts/updates.sh")

(defwidget updates []
  (box
    :class "updates"
    :visible {updates.pacman > 0 || updates.aur > 0}
    :spacing 6

    (label
      :class "pacman"
      :visible {updates.pacman > 0}
      :text "󰮯  ${updates.pacman}"
    )

    (label
      :class "aur"
      :visible {updates.aur > 0}
      :text "  ${updates.aur}"
    )
  )
)
