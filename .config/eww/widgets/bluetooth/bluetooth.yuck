(defwidget bluetooth []
  (button
    :onclick "blueberry"

    (box
      :class "bluetooth ${bluetooth.class}"
      :space-evenly false

      (label
        :text {bluetooth.icon}
      )

      (label
        :visible {bluetooth.class != ""}
        :class "text"
        :text {bluetooth.text}
      )
    )
  )
)
