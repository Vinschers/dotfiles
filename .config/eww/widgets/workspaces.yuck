(deflisten workspaces "scripts/workspaces.py")

(defwidget workspaces [monitor]
  (box
    :class "workspaces"
    (for ws in "${workspaces['${monitor}']}"
      (button
        :class "workspace status${ws.status}"
        :onclick "hyprctl dispatch workspace ${ws.id}"

        "${ws.status == 0 ? '' : ws.status == 1 ? '' : ''}"
      )
    )
  )
)
