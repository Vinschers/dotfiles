#!/bin/sh


window="$1"
action="$2"
closer="$1-closer"

if [ "$(hyprctl monitors | grep -c "Monitor")" -gt 1 ]; then
    current_mon="$(hyprctl -j monitors | jaq '.[]? | select(.focused == true) | .id')"
    window="${window}_dual$(( current_mon + 1 ))"
    closer="${closer}_dual$(( current_mon + 1 ))"
fi

if [ -z "$action" ]; then
    eww open --toggle "$closer"
    eww open --toggle "$window"
else
    eww "$action" "$window"
fi
