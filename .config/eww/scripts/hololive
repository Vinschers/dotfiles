#!/bin/sh

check_lives () {
	while read -r id symbol
    do
        if [ "$id" = "IRyS" ] || [ "$id" = "AZKi" ]; then
            name="$id"
        else
            name="$(echo "$id" | sed 's/\([^[:blank:]]\)\([[:upper:]]\)/\1 \2/g')"
        fi

        curl -s "https://www.youtube.com/@$id" | grep -q "hqdefault_live.jpg" && printf "{\"id\": \"%s\", \"icon\": \"%s\", \"name\": \"%s\"}," "$id" "$symbol" "$name"
	done
}

