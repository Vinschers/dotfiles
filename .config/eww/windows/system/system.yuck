(defwidget system []
  (box
    :class "system-window"
    :orientation "vertical"

    (hardware)
  )
)

(defwindow system
  :stacking "fg" 
  :geometry (geometry
             :x "100"
             :y "0"
             :anchor "right top")
  (system))

(defwindow closer_system
  :geometry (geometry :width "100%" :height "105%" :y "-5%")
  :stacking "fg"
  (closer :window "system"))
