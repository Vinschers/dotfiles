(defwidget calendar-win []
  (box
    :class "calendar-win"
    (calendar)))

(defwindow calendar
  :geometry (geometry
             :x "0%"
             :y "0%"
             :anchor "top right"
             :width "0px"
             :height "0px")
  (calendar-win))

(defwindow closer_calendar
  :geometry (geometry :width "100%" :height "105%" :y "-5%")
  :stacking "fg"
  :focusable false
  (closer :window "calendar"))
